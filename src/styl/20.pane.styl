#js-pane-editor
  overflow hidden

  textarea
    border     0
    box-shadow none
    padding    0
    resize     none
    width      100%

#js-pane-preview
  p
    margin 0 0 .5rem

#main
  display        flex
  flex-direction column
  position       absolute
  top            0
  bottom         0
  left           0
  right          0
  
  #editor
    flex 1
    position relative
  
